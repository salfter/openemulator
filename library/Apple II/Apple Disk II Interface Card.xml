</connector>
<port id="appleD2IC.drive1" ref="" type="Apple Disk Drive Port" label="Drive 1" image="images/Connectors/Header2x10.png">
    <inlet ref="appleD2IC.io" property="drive1" outletRef="drive" />
</port>
<port id="appleD2IC.drive2" ref="" type="Apple Disk Drive Port" label="Drive 2" image="images/Connectors/Header2x10.png">
    <inlet ref="appleD2IC.io" property="drive2" outletRef="drive" />
</port>
<component id="appleD2IC.io" class="AppleDiskIIInterfaceCard">
    <property name="controlBus" ref="" />
    <property name="drive1" ref="" />
    <property name="drive2" ref="" />
</component>
<component id="appleD2IC.rom13" class="ROM">
    <property name="image" src="roms/Apple/341-0009.bin" />
</component>
<component id="appleD2IC.rom16" class="ROM">
