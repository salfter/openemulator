        <property name="an3" value="0" />
        <connection name="pdl3" ref="audioIn" />
        <connection name="joystick" ref="" />
    </component>
    <component name="slotMemory" class="AppleIISlotMemory">
        <connection name="mmu" ref="mmu" />
        <property name="mmuMap" value="0xc100-0xc7ff" />
