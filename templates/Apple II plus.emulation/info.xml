    <inlet ref="slot.slot6" type="AppleIISlot" label="Slot 6" image="Apple II Slot.png" />
    <inlet ref="slot.slot7" type="AppleIISlot" label="Slot 7" image="Apple II Slot.png" />
    <inlet ref="video.romSocket" type="AppleIIVideoROM" label="Video ROM Socket" image="Apple II Video ROM Socket.png" />
