        <property name="blockSize" value="8" />
        <connection name="bus" value="bus" />
    </component>
    <component name="ram" class="RAM">
        <connection name="mmu" ref="mmu" />
        <property name="mmuMap" value="0x0000-0xbfff" />
        <property name="size" value="0xc000" />
        <data name="image" src="${REF}.bin" />
        <connection name="host" ref="host:host" />
    </component>
    <component name="iou" class="AddressDecoder">
        <connection name="mmu" ref="mmu" />
