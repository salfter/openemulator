    <inlet ref="video.monitor" type="CompositeVideo" label="Video Connector" image="Apple II Video Connector.png" />
    <inlet ref="game.port" type="AppleIIGame" label="Game Port" image="Apple II Game Port.png" />
    <inlet ref="slot.slot0" type="AppleIISlot" label="Slot 0" image="Apple II Slot.png" />
