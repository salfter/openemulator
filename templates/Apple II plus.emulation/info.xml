    <component name="slotExpansionMemory" class="AppleIISlotExpansionMemory">
        <connection name="mmu" ref="mmu" />
        <property name="mmuMap" value="0xc800-0xcfff" />
        <connection name="bus" ref="bus" />
    </component>
    <component name="romD0" class="ROM">
        <resource name="image" src="roms/Apple II plus D0 ROM.bin" />
