<device name="dev0" label="Apple 16kB Language Card" image="Apple Language Card.png">
    <outlet name="AppleLanguageCard" type="expansion/appleiislot" />
    <component class="AppleLanguageCard">
        <data key="memory" src="${deviceName}.bin" />
    </component>
</device>

<device name="dev1" label="Apple Disk II Interface Card" image="Apple Disk II Interface Card.png">
    <outlet name="AppleDiskIIInterfaceCard" type="expansion/appleiislot" />
    <inlet name="AppleDiskIIInterfaceCard.drive1" type="diskdrive/apple525" label="Drive 1" image="Apple Disk II Drive 1 Socket.png" />
    <inlet name="AppleDiskIIInterfaceCard.drive2" type="diskdrive/apple525" label="Drive 2" image="Apple Disk II Drive 2 Socket.png" />
     <component class="DiskIIInterfaceCard">
        <connection key="drive1" value="dev2:AppleDiskII" />
        <connection key="drive2" value="dev3:AppleDiskII" />
    </component>
     <component class="AppleIIInterfaceROM">
        <resource key="romImage" src="roms/Apple Disk II Interface ROM.bin" />
    </component>
</device>

