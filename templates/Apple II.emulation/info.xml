    <component class="AppleIICassetteOut">
        <connection key="iou" value="AppleIIIOU" />
        <connection key="video" value="AppleIIVideo" />
        <connection key="speaker" value="AppleIISpeaker" />
    </component>
    <component class="AppleIISpeaker">
        <connection key="audioController" value="host::AudioController" />
        <connection key="iou" value="AppleIIIOU" />
        <connection key="video" value="AppleIIVideo" />
        <property key="state" value="0" />
