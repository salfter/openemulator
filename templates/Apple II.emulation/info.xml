        <property key="an1" value="0" />
        <property key="an2" value="0" />
        <property key="an3" value="0" />
    </component>
    <component class="AppleIICassetteIn">
        <connection key="audioController" value="host::AudioController" />
        <connection key="gamePort" value="AppleIIGamePort" />
