    <inlet name="AppleIIGamePort.gamePort" type="expansion/appleiigame" label="Game Port" image="Apple II Game Port.png" />
    <inlet name="AppleIITVOutput.romSocket" type="expansion/appleiicharrom" label="Character ROM Socket" image="Apple II Character ROM Socket.png" />
    <component class="AppleIIEvents">
        <connection key="eventController" value="host::EventController" />
        <connection key="cpu" value="CPUMOS6502" />
        <connection key="cpuSocket" value="" />
        <connection key="secondaryCPU" value="" />
        <property key="secondaryCPUEnabled" value="0" />
        <property key="cycleClockInc" value="14" />
        <property key="scanlineClockInc" value="2" />
    </component>
    <component class="AppleIIInterrupts">
        <connection key="cpu" value="CPUMOS6502" />
    </component>
    <component class="CPUMOS6502">
