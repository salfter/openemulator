        <property key="S" value="0" />
        <property key="P" value="0" />
        <property key="PC" value="0" />
    </component>
    <component class="AppleIIMMU">
        <connection key="video" value="AppleIIVideo" />
    </component>
    <component class="AppleIIMemory">
        <connection key="mmu" value="AppleIIMMU" />
        <property key="memorySize" value="49152" />
        <data key="memory" src="${deviceName}.bin" />
