<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE dml PUBLIC "-//OPENEMULATOR//DTD DML 1.0//EN" "http://www.openemulator.org/DTDs/dml-1.0.dtd">
<dml version="1.0" label="Apple I" image="Apple I.png" description="" group="Apple I">
<device name="host">
    <component name="events" class="HostEvents">
    </component>
    <component name="audio" class="HostAudio">
        <property name="runTime" value="0.0" />
        <property name="isPaused" value="0" />
    </component>
    <component name="video" class="HostVideo">
        <property name="window" value="-1 -1 768 576" />
    </component>
    <component name="keyboard" class="HostKeyboard">
    </component>
    <component name="joystick" class="HostJoystick">
    </component>
    <component name="mouse" class="HostMouse">
    </component>
    <component name="tablet" class="HostTablet">
    </component>
    <component name="net" class="HostNet">
    </component>
    <component name="serial" class="HostSerial">
    </component>
    <component name="parallel" class="HostParallel">
    </component>
</device>

<device name="dev0" label="Apple I">
    <inlet ref="video.monitor" type="applecomposite" category="peripheral" label="Video Connector" image="RCA Connector.png" />
    <inlet ref="system.slot1" type="appleislot" category="expansion" label="Slot 1" image="Apple I Slot.png" />
    <inlet ref="system.slot2" type="appleislot" category="expansion" label="Slot 2" image="Apple I Slot.png" />
    <component name="system" class="AppleISystem">
        <connection name="hostAudio" ref="host::audio" />
        <connection name="cpu" ref="cpu" />
        <connection name="cpuSocket" ref="" />
        <connection name="slot1" ref="" />
        <connection name="slot2" ref="" />
        <property name="internalCPUEnabled" value="1" />
    </component>
    <component name="floatingBus" class="AppleIFloatingBus">
        <connection name="system" ref="system" />
    </component>
    <component name="cpu" class="MOS6502">
        <connection name="memory" ref="memory" />
        <property name="a" value="0" />
        <property name="x" value="0" />
        <property name="y" value="0" />
        <property name="s" value="0" />
        <property name="p" value="0" />
        <property name="pc" value="0" />
    </component>
    <component name="memory" class="RAM">
        <data name="image" src="${DEVICE_NAME}.bin" />
        <property name="offset" value="0x0000" />
        <property name="size" value="0x2000" />
    </component>
    <component name="video" class="AppleIVideo">
        <connection name="monitor" ref="" />
        <connection name="romSocket" ref="" />
        <resource name="image" src="roms/Signetics 2513 Video ROM.bin" />
    </component>
    <component name="keyboard" class="AppleIKeyboard">
        <connection name="hostKeyboard" ref="host::keyboard" />
    </component>
    </component name="io" class="AppleIIO">
        <connection name="pia" ref="pia" />
        <connection name="floatingBus" ref="floatingBus" />
        <property name="offset" value="0xd000" />
        <property name="size" value="0x1000" />
    </component>
    <component name="pia" class="MC6821">
        <connection name="interfaceA" ref="keyboard" />
        <connection name="interfaceB" ref="video" />
        <connection name="interruptA" ref="" />
        <connection name="interruptB" ref="" />
        <property name="controlRegisterA" value="0" />
        <property name="dataDirectionRegisterA" value="0" />
        <property name="dataRegisterA" value="0" />
        <property name="controlRegisterB" value="0" />
        <property name="dataDirectionRegisterB" value="0" />
        <property name="dataRegisterB" value="0" />
        <property name="ca1" value="0" />
        <property name="ca2" value="0" />
        <property name="cb1" value="0" />
        <property name="cb2" value="0" />
    </component>
    <component name="rom" class="ROM">
        <resource name="image" src="roms/Apple I ROM.bin" />
        <property name="offset" value="0xff00" />
    </component>
    <component name="memory" class="MemoryMap16Bit">
        <connection name="" ref="floatingBus" />
        <connection name="" ref="lowMemory" />
        <connection name="" ref="io" />
        <connection name="" ref="highMemory" />
        <connection name="" ref="rom" />
    </component>
</device>

</dml>
