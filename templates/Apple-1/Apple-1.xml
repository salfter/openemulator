<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE edl PUBLIC "-//OPENEMULATOR//DTD EDL 1.0//EN" "http://www.openemulator.org/DTDs/edl-1.0.dtd">
<edl version="1.0" label="Apple-1" image="images/Apple/Apple-1.png" description="The Apple-1 was an early personal computer, and the first in combining a microprocessor with a connection for a keyboard and a monitor. It featured a MOS 6502 microprocessor, 4 kiB RAM, and 256 bytes ROM.">

<device id="apple1" label="Apple-1" image="images/Apple/Apple-1.png" group="system" />
<port id="apple1.videoPort" ref="" type="Composite Video" label="Video Port" image="images/Connectors/RCA Female.png">
    <inlet ref="apple1.terminal" property="monitor" outletRef="connector" />
</port>
<port id="apple1.slot1" ref="" type="Apple-1 Expansion" label="Expansion Port 1" image="images/Connectors/Edge44.png" />
<port id="apple1.slot2" ref="" type="Apple-1 Expansion" label="Expansion Port 2" image="images/Connectors/Edge44.png" />
<component id="apple1.controlBus" class="ControlBus">
	<property name="device" ref="apple1" />
    <property name="audio" ref="audio" />
    <property name="crystalFrequency" value="14.31818MHz" />
    <property name="cpuFrequencyDivider" value="14" />
    <property name="cpu" ref="apple1.cpu" />
    <property name="resetOnPowerOn" value="0" />
</component>
<component id="apple1.memoryBus" class="AddressDecoder">
    <property name="addressSize" value="16" />
    <property name="blockSize" value="8" />
    <property name="floatingBus" ref="apple1.floatingBus" />
    <property name="refRAM1" ref="apple1.ram1" />
    <property name="mapRAM1" value="0x0000-0x0fff" />
    <property name="refIO" ref="apple1.ioMemory" />
    <property name="mapIO" value="0xc000-0xcfff" />
    <property name="refRAM2" ref="apple1.ram2" />
    <property name="mapRAM2" value="0xe000-0xefff" />
    <property name="refROM" ref="apple1.rom" />
    <property name="mapROM" value="0xf000-0xffff" />
</component>
<component id="apple1.cpu" class="MOS6502">
    <property name="a" value="0" />
    <property name="x" value="0" />
    <property name="y" value="0" />
    <property name="s" value="0" />
    <property name="p" value="0" />
    <property name="pc" value="0" />
    <property name="memoryBus" ref="apple1.memoryBus" />
    <property name="controlBus" ref="apple1.controlBus" />
</component>
<component id="apple1.floatingBus" class="FloatingBus">
    <property name="mode" value="ground" />
</component>
<component id="apple1.ram1" class="RAM">
    <property name="controlBus" ref="apple1.controlBus" />
    <property name="image" data="${packagePath}/${id}.bin" />
    <property name="size" value="0x1000" />
</component>
<component id="apple1.ioMemory" class="AddressDecoder">
    <property name="addressSize" value="5" />
    <property name="blockSize" value="4" />
    <property name="floatingBus" ref="apple1.floatingBus" />
    <property name="refPIA" ref="apple1.pia" />
    <property name="mapPIA" value="0x10-0x1f" />
</component>
<component id="apple1.pia" class="MC6821">
    <property name="controlBus" ref="apple1.controlBus" />
    <property name="portA" ref="apple1.io" />
    <property name="controlA" value="0" />
    <property name="directionA" value="0" />
    <property name="dataA" value="0" />
    <property name="ca1" value="0" />
    <property name="ca2" value="0" />
    <property name="controlBusA" ref="" />
    <property name="portB" ref="apple1.io" />
    <property name="controlB" value="0" />
    <property name="directionB" value="0" />
    <property name="dataB" value="0" />
    <property name="cb1" value="0" />
    <property name="cb2" value="0" />
    <property name="controlBusB" ref="" />
</component>
<component id="apple1.io" class="Apple1IO">
    <property name="terminal" ref="apple1.terminal" />
</component>
<component id="apple1.terminal" class="Apple1Terminal">
    <property name="charset" ref="apple1.charset" />
    <property name="monitor" ref="" />
</component>
<component id="apple1.charset" class="CharsetLoader">
    <property name="format" value="Signetics" />
    <property name="image" data="${resourcePath}/roms/Signetics/Signetics 2513 Video ROM.bin" />
</component>
<component id="apple1.ram2" class="RAM">
    <property name="controlBus" ref="appl1.controlBus" />
    <property name="image" data="${packagePath}/{$id}.bin" />
    <property name="size" value="0x1000" />
</component>
<component id="apple1.rom" class="ROM">
    <property name="image" data="${resourcePath}/roms/Apple/Apple-1 Monitor ROM.bin" />
</component>

</edl>
