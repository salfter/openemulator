<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE edl PUBLIC "-//OPENEMULATOR//DTD EDL 1.0//EN" "http://www.openemulator.org/DTD/edl-1.0.dtd">
<edl version="1.0" type="Disk Drive Controllers" label="Disk II Interface" image="Apple Disk II Interface Card.png">

<device id="diskIIInterface" type="Expansion" label="Apple Disk II Interface Card" image="Apple Disk II Interface Card.png" />
<connector id="diskIIInterface.connector" type="AppleIISlot" label="Apple Disk II Interface Card" image="Apple Disk II Interface Card.png" />
<port id="diskIIInterface.drive1" ref="" type="AppleIIDisk" label="Drive 1" image="Apple Disk II Socket.png">
    <inlet ref="diskIIInterface.io" property="drive1" outletRef="drive" />
</port>
<port id="diskIIInterface.drive2" ref="" type="AppleIIDisk" label="Drive 2" image="Apple Disk II Socket.png">
    <inlet ref="diskIIInterface.io" property="drive2" outletRef="drive" />
</port>
<component id="diskIIInterface.io" class="AppleDiskIIInterfaceCard">
    <property name="drive1" ref="" />
    <property name="drive2" ref="" />
</component>
<component id="diskIIInterface.memory" class="AppleIIInterfaceROM">
    <property name="image" data="${resourcePath}/roms/Apple Disk II Interface Card ROM.bin" />
</component>

</edl>
